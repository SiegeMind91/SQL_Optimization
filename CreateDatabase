--You probably won't use this command all of the time, but it's a handy one to have around when you need it
--This creates a database named 'Upkeep' and assigns values to the various settings available

CREATE DATABASE [Upkeep]
 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'Upkeep', FILENAME = N'C:\Program Files\Microsoft SQL Server\MSSQL15.MSSQLSERVER\MSSQL\DATA\Upkeep.mdf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
 LOG ON 
( NAME = N'Upkeep_log', FILENAME = N'C:\Program Files\Microsoft SQL Server\MSSQL15.MSSQLSERVER\MSSQL\DATA\Upkeep_log.ldf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
GO
ALTER DATABASE [Upkeep] SET COMPATIBILITY_LEVEL = 150
GO
ALTER DATABASE [Upkeep] SET ANSI_NULL_DEFAULT OFF 
GO
ALTER DATABASE [Upkeep] SET ANSI_NULLS OFF 
GO
ALTER DATABASE [Upkeep] SET ANSI_PADDING OFF 
GO
ALTER DATABASE [Upkeep] SET ANSI_WARNINGS OFF 
GO
ALTER DATABASE [Upkeep] SET ARITHABORT OFF 
GO
ALTER DATABASE [Upkeep] SET AUTO_CLOSE OFF 
GO
ALTER DATABASE [Upkeep] SET AUTO_SHRINK OFF 
GO
ALTER DATABASE [Upkeep] SET AUTO_CREATE_STATISTICS ON(INCREMENTAL = OFF)
GO
ALTER DATABASE [Upkeep] SET AUTO_UPDATE_STATISTICS ON 
GO
ALTER DATABASE [Upkeep] SET CURSOR_CLOSE_ON_COMMIT OFF 
GO
ALTER DATABASE [Upkeep] SET CURSOR_DEFAULT  GLOBAL 
GO
ALTER DATABASE [Upkeep] SET CONCAT_NULL_YIELDS_NULL OFF 
GO
ALTER DATABASE [Upkeep] SET NUMERIC_ROUNDABORT OFF 
GO
ALTER DATABASE [Upkeep] SET QUOTED_IDENTIFIER OFF 
GO
ALTER DATABASE [Upkeep] SET RECURSIVE_TRIGGERS OFF 
GO
ALTER DATABASE [Upkeep] SET  DISABLE_BROKER 
GO
ALTER DATABASE [Upkeep] SET AUTO_UPDATE_STATISTICS_ASYNC OFF 
GO
ALTER DATABASE [Upkeep] SET DATE_CORRELATION_OPTIMIZATION OFF 
GO
ALTER DATABASE [Upkeep] SET PARAMETERIZATION SIMPLE 
GO
ALTER DATABASE [Upkeep] SET READ_COMMITTED_SNAPSHOT OFF 
GO
ALTER DATABASE [Upkeep] SET  READ_WRITE 
GO
ALTER DATABASE [Upkeep] SET RECOVERY FULL 
GO
ALTER DATABASE [Upkeep] SET  MULTI_USER 
GO
ALTER DATABASE [Upkeep] SET PAGE_VERIFY CHECKSUM  
GO
ALTER DATABASE [Upkeep] SET TARGET_RECOVERY_TIME = 60 SECONDS 
GO
ALTER DATABASE [Upkeep] SET DELAYED_DURABILITY = DISABLED 
GO
USE [Upkeep]
GO
ALTER DATABASE SCOPED CONFIGURATION SET LEGACY_CARDINALITY_ESTIMATION = Off;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET LEGACY_CARDINALITY_ESTIMATION = Primary;
GO
ALTER DATABASE SCOPED CONFIGURATION SET MAXDOP = 0;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET MAXDOP = PRIMARY;
GO
ALTER DATABASE SCOPED CONFIGURATION SET PARAMETER_SNIFFING = On;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET PARAMETER_SNIFFING = Primary;
GO
ALTER DATABASE SCOPED CONFIGURATION SET QUERY_OPTIMIZER_HOTFIXES = Off;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET QUERY_OPTIMIZER_HOTFIXES = Primary;
GO
USE [Upkeep]
GO
IF NOT EXISTS (SELECT name FROM sys.filegroups WHERE is_default=1 AND name = N'PRIMARY') ALTER DATABASE [Upkeep] MODIFY FILEGROUP [PRIMARY] DEFAULT
GO
